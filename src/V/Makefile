
CFLAGS= -Z -O -w-par -wstv -c -ml -I$(INCLUDE) -d

.c.obj:
	tcc $(CFLAGS) $*.c
.asm.obj:
	tasm /Ml $*.asm;

#.c.obj:
#	wcc386 $*.c /c

