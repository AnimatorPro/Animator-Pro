
int scale_by(int number, int p, int q)
{
return((number*p+q/2)/q);
}

concentric_boxes(int c)
{
int i;
int sw,sh;
int sw2, sh2;
int dx,dy;
int ocycle = GetCycleDraw();

SetCycleDraw(TRUE);
GetSize(&sw,&sh);
sw2 = sw/2;
sh2 = sh/2;
for (i=0; i<c; ++i)
	{
	dx = scale_by(sw2,i,c);
	dy = scale_by(sh2,i,c);
	Box(dx,dy,sw-2*dx,sh-2*dy);
	}
SetCycleDraw(ocycle);
}

main()
{
concentric_boxes(20);
}