//Makes a cone.  Whoopi!

cone(int maxrad, int x, int y)
{
int i;
int swidth, sheight;

GetSize(&swidth, &sheight);

for (i=0;i<=maxrad;i++)
    {
    Circle(x,y,i);
    Circle(x+1,y,i);
    Circle(x, y+1,i);
    SetColor(i);
    }
}

main()
{
int x,y,rad;
char ibuf[16];

SetFilled(0);
GetInk(ibuf);
SetInk("v grad");
for(;;)
    {
    if (RubCircle(&x,&y,&rad))
        cone(rad, x, y);
    else
        break;
    }
SetInk(ibuf);
}

