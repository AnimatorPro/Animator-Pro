/* Test subroutines. */

test_line()
/* Accept two clicks, then draw a line between the points.  Right click to exit. */
{
int x1,y1;
int x2,y2;
int l,r,k;

for (;;)
	{
	WaitClick(&x1,&y1,&l,&r,&k);
	if (r)
		break;
	Dot(x1,y1);
	WaitClick(&x2,&y2,&l,&r,&k);
	if (r)
		break;
	Line(x1,y1,x2,y2);
	} 
}


test_box()
{
