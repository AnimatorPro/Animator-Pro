int w,h;

for (;;)
	{
	if (!RubBox(&mx,&my,&w,&h))
		break;
	Box(mx,my,w,h);
	}
}

test_circle()
{
int cx,cy;
int r;

for (;;)
	{
	if (!RubCircle(&cx,&cy,&r))
