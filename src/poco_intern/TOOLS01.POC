test_spiral()
{
	double ang,turns;
	int cx,cy,rad;
	int iang,iturns;

	for (;;)
	{
		if (!RubCircle(&cx,&cy,&rad))
			break;
		if (!Qnumber(&iang,-3600,3600,"Angle of rotation?"))
			break;
		if (!Qnumber(&iturns,0,1000,"Number of turns?"))
			break;
		ang=iang;
		turns=iturns;

		Spiral(ang,cx,cy,rad,turns);
	}
}

