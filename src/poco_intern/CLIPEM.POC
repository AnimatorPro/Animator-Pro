

clipit(char *name)
{
char dev[5], dir[80], file[20], ext[5];
char cel_name[80];

fnsplit(name, dev, dir, file, ext);
fnmerge(cel_name, dev, dir, file, ".CEL");
printf("loading %s", name);
LoadFlic(name);
unprintf();
CelClip();
printf("Saving %s", cel_name);
SaveCel(cel_name);
}

main()
{
char odir[80];
char **list;
int count;
int i;

GetDir(odir);
SetDir("H:\\art");
count = DirList(&list, "*.fl?", FALSE);
for (i=0; i<count; ++i)
	clipit(list[i]);
SetDir(odir);
}